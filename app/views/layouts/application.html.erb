<!DOCTYPE html>
<html>
<head>
  <title>SaluDatos</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <meta charset="utf-8"></meta>
  <meta content="IE=edge" http-equiv="X-UA-Compatible"></meta>
  <meta content="width=device-width, initial-scale=1" name="viewport"></meta>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container">
    <div class="header">
      <ul class="nav nav-pills pull-right">
        <% if current_user %>
          <li><%= link_to "Edit Profile", edit_user_path(current_user.id) %></li>
          <li><%= link_to "Logout", :logout, method: :post %></li>
        <% else %>
          <li><%= link_to "Register", new_user_path %></li>
          <li><%= link_to "Login", :login %></li>
        <% end %>
      </ul>
      <h3 class="text_muted">SaluDatos</h3>
    </div>
    <%= form_tag search_category_path, id: "categories", method: :get do %>
      <ul class="nav nav-pills">
        <li><%= select_tag 'category[specialty_id]', options_from_collection_for_select(@specialties, :id, :name, @specialty.try(:id)) %></li>
        <li><%= select_tag 'category[department_id]', options_from_collection_for_select(@departments, :id, :name, @department.try(:id)), prompt: "Departamento" %></li>
        <li><%= select_tag 'category[provider_id]', options_from_collection_for_select(@providers, :id, :name, @provider.try(:id)), prompt: "Mutualista" %></li>
      </ul>
    <% end %>
    <div>
      <p id="notice"><%= flash[:notice] %></p>
      <p id="alert"><%= flash[:alert] %></p>
    </div>

    <%= yield %>
  </div>
</body>
</html>
